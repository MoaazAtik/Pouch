<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/bg_note"
    android:layout_margin="16dp"
    android:outlineSpotShadowColor="@color/red_border"
    android:elevation="16dp"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/activity_margin"
    android:paddingBottom="@dimen/dimen_10"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true">
<!--    android:id="@+id/one_note"-->

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title\na\na"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:ellipsize="end"
        android:maxLines="2"
    />
<!--        android:includeFontPadding="false"-->
<!--        android:lineSpacingExtra="0dp"-->
<!--        android:textColor="#00c6ae"-->
<!--        android:textSize="@dimen/dot_tex_size"-->
<!--        android:layout_marginRight="@dimen/dot_margin_right"-->
<!--        android:layout_marginTop="@dimen/dot_margin_right"-->
<!--        android:layout_height="@dimen/dot_height"-->

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/timestamp"
        android:text="Timestamp"
        android:textSize="@dimen/timestamp" 
        />
<!--        android:layout_toRightOf="@id/dot"-->

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:ellipsize="end"
        android:text="Note\nNote\nNote\nNote\nNote\nNote\nNote\nNote"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        />
<!--        android:textColor="@color/note_list_text"-->
<!--        android:textSize="@dimen/note_list_text"-->
<!--        android:layout_below="@id/timestamp"-->
<!--        android:layout_toRightOf="@id/dot"-->

</LinearLayout>
